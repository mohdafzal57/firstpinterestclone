<% include ./partials/header.ejs %>

<div class="w-full min-h-screen bg-zinc-800 px-8 py-5 text-white">
    <h1 class="text-xl">Create a new post.</h1>
    <hr class="w-1/4 opacity-20 mt-3">
    <form action="/createpost" method="post" enctype="multipart/form-data">
        <input class="block rounded-full w-24 min-h-12 " class="block w-1/3 px-3 px-2" type="file" name="postimage">
        <input class="block text-black border-2 w-1/3 mt-2 px-3 px-2 rounded-md" type="text" placeholder="Title" name="title">
        <textarea class="block text-black border-2 w-1/3 mt-2 px-3 px-2 rounded-md" type="text" placeholder="Description" name="description"></textarea>
        <input class="block w-1/3 mt-2 px-3 px-2 rounded-md bg-red-700" type="submit" value="Create Post">
    </form>

</div>

<% include ./partials/footer.ejs %>