<% include ./partials/header.ejs %>

<div class="w-full min-h-screen bg-zinc-800 text-white px-10 py-8">
    <div class="cards flex flex-wrap gap-10">
        <% user.posts.forEach(element=> { %>
            <div class="card w-32">
                <div class="w-full h-40 bg-sky-200 rounded-lg overflow-hidden">
                    <img class="w-full h-full object-cover" src="/images/uploads/<%=element.image %> " alt="">
                </div>
                <h5 class="text-sm mt-2">
                    <%=element.title %>
                </h5>
            </div>
            <% }) %>
    </div>
</div>

<% include ./partials/footer.ejs %>